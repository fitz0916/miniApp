.post-author-date{
  margin: 10rpx 0 20rpx;
}
.post-author-avatar{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-family: 'Times New Roman';
  font-size: 25rpx;
}
.post-author-name{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 30rpx;
  font-family: monospace;
}
.post-title{
  font-size: 35rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
}
.post-image{
  margin-left: 16px;
  margin: auto 0;
  margin-bottom: 15px;
  width: 100%;
  height: 340rpx;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;  
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;  
}